@page
@model FindRecipeModel
@{
    ViewData["Title"] = "Find Recipe";
}
<style>
    h1{text-align: center;}
    p{text-align: center;}
</style>
<head>
    <h1>@ViewData["Title"]</h1>
    <p>Select Filters to Match What You Want To Eat</p>
    <div class="text-center">
        <div id="Filters" class="form-group">
        <label for="DietTyype">Choose a Diet Type:</label>
        <select name="DietType" id="DietType">
          <option value="No preference">No preference</option>
          <option value="Vegetarian">Vegetarian</option>
          <option value="Vegan">Vegan</option>
        </select>
        <label for="Prices">Prices:</label>
        <select name="Prices" id="Prices">
            <option value="N/A">N/A</option>
            <option value="$">$</option>
            <option value="$$">$$</option>
            <option value="$$$">$$$</option>
        </select>
        <label for="MealType">Meal Type:</label>
        <select name="MealType" id="MealTyoe">
            <option value="N/A">N/A</option>
            <option value="Breakfast">Breakfast</option>
            <option value="Lunch">Lunch</option>
            <option value="Dinner">Dinner</option>
            <option value="Dessert">Dessert</option>
        </select>
    </div>
    </div>
</head>
